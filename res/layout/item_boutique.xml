<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_boutique"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_boutique_avatar"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="#000"
        android:scaleType="fitXY"
        android:src="@drawable/default_face" />

    <LinearLayout
        android:id="@+id/boutique_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/niv_boutique_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_boutique_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="title"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/list_item_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_boutique_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="name"
            android:ellipsize="end"
            android:textColor="@color/list_item_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_boutique_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="desc"
            android:textColor="@color/gray_normal"
            android:textSize="18sp"
            android:maxLines="2"/>
    </LinearLayout>
</RelativeLayout>